<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="product_template_form" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="weight"/>
                </field>
                <field name='barcode' position="after">
                    <field name="pr_type"/>
                </field>
                <field name='pr_type' position="after">
                    <field name="unit_of_measure"/>
                </field>
                <xpath expr="//label[@for='name']" position="attributes">
                    <attribute name="string">Tên Sản Phẩm</attribute>
                </xpath>
                <xpath expr="//label[@for='sale_ok']" position="attributes">
                    <attribute name="string">Có thể bán</attribute>
                </xpath>
                <xpath expr="//field[@name='purchase_ok']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='purchase_ok']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='type']" position="attributes">
                    <attribute name="string">Kiểu Sản Phẩm</attribute>
                </xpath>
                <xpath expr="//field[@name='categ_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='default_code']" position="attributes">
                    <attribute name="string">Tài Liệu Tham Khảo</attribute>
                </xpath>
                <xpath expr="//field[@name='barcode']" position="attributes">
                    <attribute name="string">Mã Vạch</attribute>
                </xpath>
                <xpath expr="//label[@for='list_price']" position="attributes">
                    <attribute name="string">Giá Bán</attribute>
                </xpath>
                <!--                <xpath expr="//label[@for='taxes_id']" position="attributes">-->
                <!--                    <attribute name="invisible">Thuế Khách Hàng</attribute>-->
                <!--                </xpath>-->
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="string">Mã Vạch</attribute>
                </xpath>
                <xpath expr="//label[@for='standard_price']" position="attributes">
                    <attribute name="string">Mã Vạch</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="string">Công Ty</attribute>
                </xpath>
                <xpath expr="//group" position="after">

                    <notebook>
                        <page string="Các Thành Phần">
                            <field name="thanhphan_lines">
                                <tree editable="bottom">
                                    <field name="tentp"/>
                                    <field name="soluong"/>
                                    <field name="congdung"/>
                                    <field name="thanhphan_id" invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="tentp"/>
                                        </group>
                                        <group>
                                            <field name="soluong"/>
                                        </group>
                                        <group>
                                            <field name="congdung"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>


                </xpath>
            </field>
        </record>

        <record id="rma_menu_action" model="ir.actions.act_window">
            <field name="name">RMA BIBICA</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Thêm Sản Phẩm Nào
                </p>
            </field>
        </record>

        <record id="rma_product_action" model="ir.actions.act_window">
            <field name="name">RMA_product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="product.product_template_only_form_view"/>
        </record>


    </data>
</odoo>