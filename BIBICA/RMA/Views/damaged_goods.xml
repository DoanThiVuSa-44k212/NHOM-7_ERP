<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="rma_damaged_goods_from_view" model="ir.ui.view">
            <field name="name">damaged_goods_form_view</field>
            <field name="model">damaged.goods</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <group name="Thông Tin Phụ">
                            <group>
                                <field name="processing_date"/>
                                <field name="quantity"/>
                            </group>
                            <group>
                                <field name="input_date"/>
                                <field name="description"/>
                                <field name="status"/>
                            </group>
                        </group>

                        <label for="name" string="Sản Phẩm" class="oe_edit_only"/>
                        <field name ="name"/>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="rma_damaged_goods_tree_view" model="ir.ui.view">
            <field name="name">damaged_goods_tree_view</field>
            <field name="model">damaged.goods</field>
            <field name="arch" type="xml">
                <tree string="damaged goods" default_order="create_date desc">
                    <field name="name" string="Tên Sản Phẩm"/>
                    <field name="processing_date"/>
                    <field name="quantity"/>
                    <field name="input_date"/>
                    <field name="description"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="rma_damaged_goods_action" model="ir.actions.act_window">
            <field name="name">Xử Lý Hàng Hỏng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">damaged.goods</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Thêm Dữ Liệu Nào
                </p>
            </field>
        </record>
    </data>
</odoo>