<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="stock_scrap_form" model="ir.ui.view">
            <field name="name">stock.scrap.form</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <group>
                        <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="string">Tên Sản Phẩm</attribute>
                </xpath>
                <xpath expr="//field[@name='scrap_qty']" position="attributes">
                    <attribute name="string">Số Lượng</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="string">Công Ty</attribute>
                </xpath>
                <xpath expr="//field[@name='origin']" position="attributes">
                    <attribute name="string">Tài Liệu Nguồn</attribute>
                </xpath>
                <sheet>
                    <group>
                        <group>
                            <field name="product_status"></field>
                            <field name="processing_date"></field>

                        </group>
                        <group>
                            <field name="input_date"></field>
                        </group>
                    </group>
                    <notebook>
                        <page name="employee_page" string="Nhân Viên">
                            <field name="employee"></field>
                        </page>
                        <page name="note" string="Ghi Chú">
                            <group name="note">
                                <field name="note" string="Ghi Chú"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </field>
        </record>

        <record id="rma_damaged_goods_action" model="ir.actions.act_window">
            <field name="name">Xử Lý Hàng Hỏng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.scrap</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Thêm Sản Phẩm Nào
                </p>
            </field>
        </record>

    </data>
</odoo>